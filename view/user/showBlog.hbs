






<div class="card mb-3">
  <img style="width: 200px; height: 200px;" src="/blog/{{blog.imagePath}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{blog.title}}</h5>
    <p class="card-text">{{blog.content}}</p>
    <p class="card-text"><small class="text-body-secondary">{{blog.author}}</small></p>
    <a class="btn btn-info me-5" href="/deleteblog?id={{blog.id}}">Delete Blog</a>

    <a class="btn btn-warning ms -5" href="updateblog?id={{blog.id}}">Update Blog</a>
  </div>
</div>
